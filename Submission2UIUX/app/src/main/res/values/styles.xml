<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="color">@color/text</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>


        <item name="backgroundColor">@color/colorPrimary</item>
        <item name="Icon_color">@color/colorAccent</item>
        <item name="Text_Color">@color/text</item>
        <item name="Text_subtitle_color">@color/textunselecttab</item>
        <item name="Button_Color">#5AA6F8</item>
        <item name="background_item_list">#89C1FD</item>
        <item name="text_search">#333333</item>
        <item name="background_search">#f4f4f4</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>


    </style>

    <style name="custom_fab">
        <item name="android:background">@drawable/bg_un_selected_tabs</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    <!-- Dark application theme. -->
    <style name="DarkThem" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#F2202020</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="color">@color/text</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>


        <item name="backgroundColor">#F2202020</item>
        <item name="Icon_color">@color/colorAccent</item>
        <item name="Text_Color">#FDFEFF</item>
        <item name="Text_subtitle_color">@color/textunselecttab</item>
        <item name="Button_Color">#002853</item>
        <item name="background_item_list">#2B3745</item>
        <item name="text_search">#ffff</item>
        <item name="background_search">#2B3745</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>


    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/Text_Color</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
