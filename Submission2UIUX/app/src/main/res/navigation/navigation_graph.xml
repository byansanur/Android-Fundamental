<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/fragment_search">


    <fragment
        android:id="@+id/fragment_search"
        android:name="com.byandev.submission2uiux.ui.fragments.FragmentSearch"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_fragment_search_to_detailActivity"
            app:destination="@id/detailActivity"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <activity
        android:id="@+id/detailActivity"
        android:name="com.byandev.submission2uiux.ui.DetailActivity"
        android:label="DetailActivity"
        tools:layout="@layout/detail_activity"/>


</navigation>